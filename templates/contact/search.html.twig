{% extends 'contactBase.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row" style="height:100vh">
    <div class="container bg-dark text-white" style="padding-left:150px;padding-right:150px;padding-top:25px;">
    <br>
        <div class="row text-white">
            <div class="col">
                <h1>Search Result</h1>
            </div>
            <div class="col">
            </div>
            <div class="col text-right">
                <a type="button" href="{{path('contact_add')}}" class="btn btn-outline-light">Add Contact</a>
                <a type="button" href="{{path('contact_add_dummy')}}" class="btn btn-outline-light">Add Dummy Contact</a>
            </div>        
        </div>
        
        <hr>
        <br>

        <table class="table text-white">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Content</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{contact.name}}</td>
                        <td>{{contact.email}}</td>
                        <td>{% if contact.gender == 1 %} Male {% else %} Female {% endif %}</td>
                        <td>{{contact.content}}</td>
                        <td>
                            <a href="{{path('contact_show', {id: contact.id})}}"><i class="text-secondary bi bi-pencil-square"></i></a>
                            <a href="{{path('contact_delete', {id: contact.id})}}"><i class="text-danger bi bi-trash3"></i></a>
                        </td>   
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
