{% extends 'contactBase.html.twig' %}

{% block body %}

<style>
label {
    color: black;
}

</style>
<div class="row" style="height:100vh">
    <div class="container bg-dark text-white" style="padding-left:150px;padding-right:150px;padding-top:25px;">
        
        <div class="row align-items-center g-lg-5 py-5">
            <div class="col-lg-7 text-white text-center text-lg-start">
                <h1 class="display-4 fw-bold lh-1 mb-3">Manage Customer</h1>
                <p class="col-lg-10 fs-4">
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}
                        </div>
                        <div>
                        <a type="button" class="btn btn-info btn-lg w-10 go-back"  href="{{ path('list') }}">Go back</a>
                        <a type="button" class="btn btn-secondary btn-lg w-10 " href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                </p>
            </div>

            <div class="col-md-10 mx-auto col-lg-5">
                <form class="p-4 p-md-5 border rounded-3 bg-light needs-validation">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control update-name" id="update-name" aria-describedby="name" value="{{contact.name}}" required>
                    </div>

                    <div class="form-group" style="padding-top:10px;">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control update-email" id="update-email" aria-describedby="email" value="{{contact.email}}" required>
                    </div>

                    <div class="form-group" style="padding-top:10px;">
                        <label for="gender">Gender</label>
                        <select class="form-control update-gender" id="update-gender" required>
                            <option value="1" {% if contact.gender == 1 %} selected {% endif %}>Male</option>
                            <option value="2" {% if contact.gender == 2 %} selected {% endif %}>Female</option>
                        </select>
                    </div>

                    <div class="form-group" style="padding-top:10px;">
                        <label for="content">Content</label>
                        <textarea class="form-control update-content" required id="update-content" rows="5">{{contact.content}}</textarea>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary btn-lg w-100 update-contact">Update Customer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
